public class Fourth {

	public static void main(String[] args)		//Simply sort an array
	{
		int arr[] = {1,0,1,1,0,1,0}, b;
		boolean sorted = true;
		
		for(int i = 0;i< arr.length -1; i++)
		{
			for(int j = i; j< arr.length -1; j++)
			{
				if(arr[j] > arr[j+1])
				{
					sorted = false;
					b = arr[j];
					arr[j] = arr[j+1];
					arr[j+1] = b;
					
				}
			}
			
		}
		
		for(int i =0;i< arr.length; i++)
			System.out.print(arr[i]);
	}
}
